; Docs: https://github.com/polybar/polybar
;==========================================================

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #444
background-alt = #555
foreground = #DDD
foreground-alt = #AAA
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
underline-1 = #00F
good = #5A5
bad = #A55

[bar/exwm-bar]
width = 100%
height = 17
fixed-center = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #000

border-size = 0
border-color = #000

padding-top = 0
padding-left = 1
padding-right = 1

offset-x = 0
offset-y = 0

font-0 = "LiberationMono:size=10;3"
font-1 = "LiberationMono:size=10:weight=bold;3"

modules-center = exwm-buff-name exwm-persp-name
; modules-center = exwm-buff-name exwm-file-name
modules-left = cpu memory battery
modules-right = volume date

module-margin = 1

tray-position = right
tray-padding = 2
tray-maxsize = 28

cursor-click = pointer
cursor-scroll = ns-resize

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
label = %percentage:3%%
format-prefix = "CPU:"
format-prefix-foreground = ${colors.foreground-alt}

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = %percentage_used:3%%
format-prefix = "MEM:"
format-prefix-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%a,%d/%m"
date-alt = "%A %B %d %Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/battery]
type = internal/battery

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = %percentage:3%%
format-charging-prefix = "BAT:"
format-charging-prefix-foreground = ${colors.good}

label-discharging = %percentage:3%%
format-discharging-prefix = "BAT:"
format-discharging-prefix-foreground = ${colors.bad}

label-full = %percentage:3%%
format-full-prefix = "BAT:"
format-full-prefix-foreground = ${colors.foreground-alt}

full-at = 97

battery = BAT0
adapter = ADP1

poll-interval = 5

[module/volume]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = %percentage:3%%
format-volume-prefix = "VOL:"
format-volume-prefix-foreground = ${colors.foreground-alt}

format-muted = <label-muted>
label-muted = %percentage:3%%
format-muted-prefix = "MUT:"
format-muted-prefix-foreground = ${colors.bad}

